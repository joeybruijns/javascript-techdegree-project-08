extends layout.pug

block content
    h1 Update Book
    form
        p
            label(for="title") Title
            input(name="title" type="text" id="title" value=`${currentBookData.title}`)
        p
            label(for="author") Author
            input(name="author" type="text" id="author" value=`${currentBookData.author}`)
        p
            label(for="genre") Genre
            input(name="genre" type="text" id="genre" value=`${currentBookData.genre}`)
        p
            label(for="year") Year
            input(name="year" type="text" id="year" value=`${currentBookData.year}`)
        p
            input(type="submit" value="Update Book")
    form
        p
            a(class="button" href="/") Cancel
        p
            input(type="submit" value="Delete Book")